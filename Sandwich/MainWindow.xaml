            <Label Name="lblBreadVal" Content="..."  Height="24" Width="102"></Label>
            <Label Name="lblVeggisVal" Content="..."  Height="30" Width="104"></Label>
            <Label Name="lblMeatVal" Content="..."  Height="30" Width="101"></Label>
        </StackPanel>


    </Grid>
</Window>
