<Window x:Class="IcecreamSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcecreamSelector"
        mc:Ignorable="d"
        Title="Ice Cream Shop" Height="422" Width="700" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ListView Name="lvIceCreamFalvors" VerticalAlignment="Top" Width="211" Margin="10,20, 30, 10" Height="251"/>
            <Button Name="btnAddSelectedFlavor" Content="Add" Margin="70,0,373,20" Width="100" Height="50" VerticalAlignment="Center" Click="BtnAddSelectedFlavor_Click" MouseDown="BtnAddSelectedFlavor_MouseDown"/>
        </StackPanel>
        <StackPanel>
            <ListView Name="lvSelectedFalvors" HorizontalAlignment="Left" Width="188" Margin="476,20,0,0"  Height="248"/>
            <Button Name="btnDeleteScoop" Content="Delete Scoop" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="514,30,0,0" Width="100" Height="25" Click="BtnDeleteScoop_Click"/>
            <Button Name="btnClearAll" Content="Clear All" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="514,20,0,30" Width="100"  Height="25" Click="BtnClearScoops_Click"/>
        </StackPanel>

    </Grid>
</Window>
